<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="video_style_volume_brightness">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="video_style_volume_brightness.seek_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/video_volume_brightness_seekbar_selector</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="video_style_seek">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="video_style_loading">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateDrawable">@drawable/video_loading</item>
    </style>

    <style name="video_style_overlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white_e9</item>
        <item name="android:drawablePadding">@dimen/video_common_15dp</item>
    </style>

    <style name="video_style_font_3d" parent="video_style_overlay">
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="android:shadowColor">@color/red</item>-->
        <!--<item name="android:shadowDx">1</item>-->
        <!--<item name="android:shadowDy">0</item>-->
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:shadowRadius">1</item>-->
    </style>

    <style name="video_style_font_3d.h5" parent="video_style_font_3d">
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="video_style_font_3d.h6" parent="video_style_font_3d">
        <item name="android:textSize">@dimen/h6</item>
    </style>

</resources>