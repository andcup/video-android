<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="@dimen/setting_width"
              android:layout_height="wrap_content">

    <TextView android:layout_width="@dimen/setting_item_title_width"
              android:layout_height="@dimen/setting_item_height"
              android:textSize="@dimen/h4"
              android:gravity="center"
              android:id="@+id/tv_content"
              android:textColor="@color/white_e9"
              android:paddingLeft="@dimen/video_common_15dp"
            />

    <HorizontalScrollView android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:paddingRight="15dp"
                          android:fadeScrollbars="false">

        <RadioGroup android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:gravity="left|center_vertical"
                    android:id="@+id/rg_child_item_container"
                    android:orientation="horizontal"/>

    </HorizontalScrollView>


</LinearLayout>